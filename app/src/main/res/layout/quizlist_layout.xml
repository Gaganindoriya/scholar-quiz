<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bulb_icon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_lightbulb"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/quiz_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                style="@style/quizStyle"
                android:text="Quiz 1" />

            <TextView
                android:id="@+id/quiz_status"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                style="@style/quizStatusStyle" />

            <TextView
                android:id="@+id/questionStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/quizScoreStyle"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/subscribe_nevigation"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.8"
                android:gravity="center"
                android:src="@drawable/lead_pencil"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
